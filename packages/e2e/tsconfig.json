{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "esnext",
    "types": [],
    "moduleResolution": "node",
    "rootDir": ".",
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "strict": true,
    "noImplicitAny": false,
    "composite": true,
    "noUnusedParameters": true,
    "isolatedDeclarations": true,
    "allowImportingTsExtensions": true,
    "noUnusedLocals": true
  },
  "include": ["src", "test"]
}
